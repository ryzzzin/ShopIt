@model ShopIt.Models.AdminModels.ChangePasswordRequest;

@{ 
    ViewBag.Title = "Change  user password";
}

<form asp-controller="Users" asp-action="ChangePassword" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" value="Id" />
    <input type="hidden" value="Email" />

    <div class="form-group">
        <label asp-for="NewPassword" class="control-label"></label>
        <input type="password" asp-for="NewPassword" class="form-control">
    </div>
    <div class="form-group">
        <input type="submit" value="Save change" class="btn btn-link">
    </div>
</form>