@model ShopIt.Models.AdminModels.ShowImageRequest

<img src=@($"{Environment.CurrentDirectory}/Images/{Model.Path}")/> 
<h2> Basic File Upload</h2>
@using (Html.BeginForm("EditProfilePicture",
                       "Profile",
                       FormMethod.Post,
                       new { enctype = "multipart/form-data" }))
{
    <label for="file">Upload Image:</label>
    <input type="file" name="file" id="file" />
    <br>
    <br>

    <input type="submit" value="Upload Image" />

    <br>
    <br>

    @ViewBag.Message
}