@model ShopIt.Models.AdminModels.CreateProductRequest

@{
    ViewData["Title"] = "Product creation";
}

<form asp-controller="Products" asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input type="text" asp-for="Title" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input type="number" min="0" value="0" step=".01" asp-for="Price" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Stock" class="control-label"></label>
        <input type="number" min="0" value="1" step="1" asp-for="Stock" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="CategoryId" class="control-label"></label>
        <input type="text" asp-for="CategoryId" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input type="text" asp-for="Description" class="form-control">
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary">
    </div>
</form>